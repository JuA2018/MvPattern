<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id = "@+id/movieTitle"
        android:text = "영화제목: "
        android:layout_marginTop="111dp"
        android:textSize="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id = "@+id/edtTxt"
        android:layout_alignBaseline="@+id/movieTitle"
        android:layout_alignBottom="@+id/movieTitle"
        android:layout_toRightOf="@+id/movieTitle"
        android:layout_toEndOf="@+id/movieTitle" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/edtTxt"
        android:layout_toEndOf="@+id/edtTxt"
        android:layout_toRightOf="@+id/edtTxt"
        android:text="영화댓글검색" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id = "@+id/txtView"
        android:layout_below="@id/edtTxt"/>

</RelativeLayout>